<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xmlns:sc="http://www.ascc.net/xml/schematron" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:tei="http://www.tei-c.org/ns/1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:local="http://syriaca.org/ns" xml:id="controlledValues" xml:lang="en">
   <include>
      <parse>
         <valList xmlns:sch="http://purl.oclc.org/dsdl/schematron" type="closed">
                                    <valItem ident="xml"/>
                                    <valItem ident="text"/>
                                </valList>
      </parse>
   </include>
   <layout>
      <topLine>
         <valList xmlns:sch="http://purl.oclc.org/dsdl/schematron" type="closed">
                                    <valItem ident="above">
                                        <desc>The writing is above top line.</desc>
                                    </valItem>
                                    <valItem ident="below">
                                        <desc>The writing is below top line.</desc>
                                    </valItem>
                                    <valItem ident="mixed">
                                        <desc>The writing is variously above and below top line with
                                            no clear pattern.</desc>
                                    </valItem>

                                </valList>
      </topLine>
   </layout>
   <availability>
      <status>
         <valList xmlns:sch="http://purl.oclc.org/dsdl/schematron" type="closed">
                                    <valItem ident="free">
                                        <desc>The item is available.</desc>
                                    </valItem>
                                    <!-- nb: not necessarily permanently restricted -->
                                    <valItem ident="restricted">
                                        <desc>Access to the item is restricted for conservation or
                                            other reasons.</desc>
                                    </valItem>
                                    <valItem ident="exhibition">
                                        <desc>The item is on exhibition at the owning library or
                                            another institution, and is likely to be temporarily
                                            unavailable.</desc>
                                    </valItem>
                                    <valItem ident="offsite">
                                        <desc>The item is stored offsite, and will take at least
                                            twenty-four hours to produce.</desc>
                                    </valItem>
                                    <valItem ident="printcat">
                                        <desc>The item is orderable through a catalogue of printed materials, typically because it is a fragment in a printed book or because it is part of a collection of mostly printed material.</desc>
                                    </valItem>
                                    <valItem ident="none">
                                        <desc>The item cannot be ordered, typically either because it is a stub record or because it is not held by the library which is responsible for the catalogue.</desc>
                                    </valItem>
                                    <valItem ident="unknown">
                                        <desc>Availability of the item is unknown.</desc>
                                    </valItem>
                                </valList>
      </status>
   </availability>
</TEI>