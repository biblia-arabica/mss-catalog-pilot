        <front>
            <divGen type="toc"/>
        </front>
        <body>
            <div>
                <head>Information on this customization</head>
                <p>Schema for MAJLIS Project. This part of the schema is used for entering descriptions of the manuscript layout using XForms.</p>
                <p>Built on the <ref target="https://betamasaheft.eu/Guidelines">Beta maṣāḥǝft Guidelines</ref> contain examples and details of that
                    customization.</p>
                <p>Added Rules from the <ref target="https://github.com/msDesc/consolidated-tei-schema/blob/master/msdesc.odd">consolidated
                        schema</ref> of FIRHIST</p>
                <p>Constrained this schema for generating forms.</p>
            </div>
            <div>
                <schemaSpec ident="mss-history" docLang="en" prefix="tei_" start="TEI" xml:lang="en" targetLang="en">
                    <!--source="mss-compiled.odd"-->
                    <!--       MODULES USED BY THE SCHEMA
                the @source ties the current schema to the pre-compiled Arabic Manuscripts Schema, which is tied to version 4.2.0 of TEI
                -->

                    <moduleRef key="core" include="p q date"/>
                    <moduleRef key="msdescription" include="acquisition history locus origDate origin origPlace provenance stamp summary"/>
                    <moduleRef key="namesdates" include="persName placeName"/>
                    <moduleRef key="tei"/>
                    <elementSpec ident="note" module="core" mode="change date">
                        <desc versionDate="2022-05-26" xml:lang="en">Miscellaneous notes regarding the feature under discussion.</desc>
                        <classes mode="replace">
                            <memberOf key="model.annotationLike"/>
                            <memberOf key="model.annotationPart.body"/>
                            <memberOf key="model.correspActionPart"/>
                            <memberOf key="model.correspContextPart"/>
                            <memberOf key="model.correspDescPart"/>
                            <memberOf key="model.noteLike"/>
                            <memberOf key="att.anchoring" mode="delete"/>
                            <memberOf key="att.global"/>
                            <memberOf key="att.placement" mode="delete"/>
                            <memberOf key="att.pointing" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                            <memberOf key="att.written" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="p"/>
                            <elementRef key="locus"/>
                        </content>
                        <attList>
                            <attDef ident="n" mode="delete"/>
                            <attDef ident="xml:base" mode="delete"/>
                            <attDef ident="xml:space" mode="delete"/>
                            <attDef ident="xml:rend" mode="delete"/>
                            <attDef ident="xml:style" mode="delete"/>
                            <attDef ident="xml:rendition" mode="delete"/>
                            <attDef ident="xml:lang" mode="delete"/>
                            <attDef ident="corresp" mode="delete"/>
                            <attDef ident="synch" mode="delete"/>
                            <attDef ident="sameAs" mode="delete"/>
                            <attDef ident="copyOf" mode="delete"/>
                            <attDef ident="next" mode="delete"/>
                            <attDef ident="prev" mode="delete"/>
                            <attDef ident="exclude" mode="delete"/>
                            <attDef ident="select" mode="delete"/>
                            <attDef ident="ana" mode="delete"/>
                            <attDef ident="facs" mode="delete"/>
                            <attDef ident="change" mode="delete"/>
                            <attDef ident="cert" mode="delete"/>
                            <attDef ident="resp" mode="delete"/>
                            <attDef ident="source" mode="delete"/>
                            <attDef ident="place" mode="delete"/>
                            <attDef ident="targetLang" mode="delete"/>
                            <attDef ident="target" mode="delete"/>
                            <attDef ident="evaluate" mode="delete"/>
                            <attDef ident="type" mode="delete"/>
                            <attDef ident="subtype" mode="delete"/>
                            <attDef ident="hand" mode="delete"/>
                            <attDef ident="anchored" mode="delete"/>
                            <attDef ident="targetEnd" mode="delete"/>
                            <attDef ident="rend" mode="delete"/>
                            <attDef ident="rendition" mode="delete"/>
                            <attDef ident="style" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="locus" module="msdescription" mode="change">
                        <desc versionDate="2022-05-26" xml:id="locus.desc" xml:lang="en">The location of a text or another feature within the
                            manuscript. The "target" attribute is used for single folio. The "from" and "to" attributes are used together to describe
                            a range of folios.</desc>
                        <classes mode="replace">
                            <memberOf key="model.pPart.msdesc"/>
                            <memberOf key="att.pointing"/>
                            <memberOf key="att.global"/>
                            <memberOf key="att.typed" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <alternate maxOccurs="unbounded" minOccurs="0">
                                <textNode/>
                            </alternate>
                            <alternate maxOccurs="unbounded" minOccurs="0">
                                <textNode/>
                            </alternate>
                        </content>
                        <attList>
                            <attDef ident="ana" mode="delete"/>
                            <attDef ident="change" mode="delete"/>
                            <attDef ident="copyOf" mode="delete"/>
                            <attDef ident="corresp" mode="delete"/>
                            <attDef ident="evaluate" mode="delete"/>
                            <attDef ident="facs" mode="delete"/>
                            <attDef ident="next" mode="delete"/>
                            <attDef ident="prev" mode="delete"/>
                            <attDef ident="rend" mode="delete"/>
                            <attDef ident="rendition" mode="delete"/>
                            <attDef ident="resp" mode="delete"/>
                            <attDef ident="sameAs" mode="delete"/>
                            <attDef ident="select" mode="delete"/>
                            <attDef ident="source" mode="delete"/>
                            <attDef ident="style" mode="delete"/>
                            <attDef ident="subtype" mode="delete"/>
                            <attDef ident="synch" mode="delete"/>
                            <attDef ident="target" mode="delete"/>
                            <attDef ident="targetLang" mode="delete"/>
                            <attDef ident="type" mode="delete"/>
                            <attDef ident="xml:base" mode="delete"/>
                            <attDef ident="xml:id" mode="delete"/>
                            <attDef ident="xml:lang" mode="delete"/>
                            <attDef ident="xml:space" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="locusGrp" module="msdescription" mode="delete"/>
                    <elementSpec ident="msFrag" module="msdescription" mode="delete"/>
                    <elementSpec ident="TEI" module="textstructure" mode="delete"/>
                    <elementSpec ident="msDesc" module="msdescription" mode="delete"/>
                    <elementSpec ident="catchwords" module="msdescription" mode="delete"/>
                    <elementSpec ident="collation" module="msdescription" mode="delete"/>
                    <elementSpec ident="condition" module="msdescription" mode="delete"/>
                    <elementSpec ident="dim" module="msdescription" mode="delete"/>
                    <elementSpec ident="foliation" module="msdescription" mode="delete"/>
                    <elementSpec ident="material" module="msdescription" mode="delete"/>
                    <elementSpec ident="objectDesc" module="msdescription" mode="delete"/>


                    <elementSpec ident="physDesc" module="msdescription" mode="delete"/>
                    <elementSpec ident="layoutDesc" module="msdescription" mode="delete"/>
                    <elementSpec ident="dimensions" module="msdescription" mode="delete"/>
                    <elementSpec ident="layout" module="msdescription" mode="delete"/>
                    <elementSpec ident="summary" module="msdescription" mode="change">
                        <desc versionDate="2022-05-26" xml:id="summary.desc" xml:lang="en">Outline your observations of the main historical facts of
                            this manuscript or manuscript part.</desc>
                        <content>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="ana" mode="delete"/>
                            <attDef ident="cert" mode="delete"/>
                            <attDef ident="change" mode="delete"/>
                            <attDef ident="copyOf" mode="delete"/>
                            <attDef ident="corresp" mode="delete"/>
                            <attDef ident="exclude" mode="delete"/>
                            <attDef ident="facs" mode="delete"/>
                            <attDef ident="n" mode="delete"/>
                            <attDef ident="next" mode="delete"/>
                            <attDef ident="prev" mode="delete"/>
                            <attDef ident="rend" mode="delete"/>
                            <attDef ident="rendition" mode="delete"/>
                            <attDef ident="resp" mode="delete"/>
                            <attDef ident="sameAs" mode="delete"/>
                            <attDef ident="select" mode="delete"/>
                            <attDef ident="source" mode="delete"/>
                            <attDef ident="style" mode="delete"/>
                            <attDef ident="synch" mode="delete"/>
                            <attDef ident="xml:base" mode="delete"/>
                            <attDef ident="xml:id" mode="delete"/>
                            <attDef ident="xml:lang" mode="delete"/>
                            <attDef ident="xml:space" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="height" module="msdescription" mode="delete"/>
                    <elementSpec ident="width" module="msdescription" mode="delete"/>

                    <elementSpec ident="ab" module="linking" mode="delete"/>
                    <elementSpec ident="p" module="core" mode="change">
                        <desc versionDate="2022-05-26" xml:lang="en">Enter prose text to connect the fields dedicated to specific elements and form a
                            coherent descriptive text.</desc>
                        <content>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="ana" mode="delete"/>
                            <attDef ident="cert" mode="delete"/>
                            <attDef ident="change" mode="delete"/>
                            <attDef ident="copyOf" mode="delete"/>
                            <attDef ident="corresp" mode="delete"/>
                            <attDef ident="decls" mode="delete"/>
                            <attDef ident="exclude" mode="delete"/>
                            <attDef ident="facs" mode="delete"/>
                            <attDef ident="hand" mode="delete"/>
                            <attDef ident="n" mode="delete"/>
                            <attDef ident="next" mode="delete"/>
                            <attDef ident="part" mode="delete"/>
                            <attDef ident="prev" mode="delete"/>
                            <attDef ident="rend" mode="delete"/>
                            <attDef ident="rendition" mode="delete"/>
                            <attDef ident="resp" mode="delete"/>
                            <attDef ident="sameAs" mode="delete"/>
                            <attDef ident="select" mode="delete"/>
                            <attDef ident="source" mode="delete"/>
                            <attDef ident="style" mode="delete"/>
                            <attDef ident="synch" mode="delete"/>
                            <attDef ident="xml:base" mode="delete"/>
                            <attDef ident="xml:id" mode="delete"/>
                            <attDef ident="xml:lang" mode="delete"/>
                            <attDef ident="xml:space" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="acquisition" mode="change">
                        <desc versionDate="2022-05-26" xml:id="acquisn.desc" xml:lang="en">Give an account of how the manuscript came into the
                            collection where it is now held. Use the available elements to tag relevant persons, dates, etc.</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="placeName"/>
                            <elementRef key="date"/>
                            <elementRef key="stamp"/>
                            <elementRef key="signatures"/>
                            <elementRef key="p"/>
                            <elementRef key="persName"/>
                            <elementRef key="locus"/>
                            <elementRef key="placeName"/>
                            <elementRef key="date"/>
                            <elementRef key="stamp"/>
                            <elementRef key="signatures"/>
                            <elementRef key="p"/>
                            <elementRef key="persName"/>
                            <elementRef key="locus"/>
                            <elementRef key="placeName"/>
                            <elementRef key="date"/>
                            <elementRef key="stamp"/>
                            <elementRef key="signatures"/>
                            <elementRef key="p"/>
                            <elementRef key="persName"/>
                            <elementRef key="locus"/>
                            <elementRef key="placeName"/>
                            <elementRef key="date"/>
                            <elementRef key="stamp"/>
                            <elementRef key="signatures"/>
                            <elementRef key="p"/>
                            <elementRef key="persName"/>
                            <elementRef key="locus"/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="origin" mode="change">
                        <desc versionDate="2022-05-26" xml:id="origin.desc" xml:lang="en">Give an account of how the manuscript was created. Describe
                            the scribe, the patron, the time, and other facts using the appropriate elements.</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="p"/>
                            <elementRef key="q"/>
                            <elementRef key="origPlace"/>
                            <elementRef key="origDate"/>
                            <elementRef key="locus"/>
                            <elementRef key="persName"/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="provenance" mode="change">
                        <desc versionDate="2022-05-26" xml:id="prov.desc" xml:lang="en">Give an account of how the manuscript passed into the hands of
                            later owners using vestiges they left inside the manuscript or some external records. Use the appropriate elements to
                            describe relevant persons, dates, etc.</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="date"/>
                            <elementRef key="p"/>
                            <elementRef key="locus"/>
                            <elementRef key="persName"/>
                            <elementRef key="signatures"/>
                            <elementRef key="stamp"/>
                            <elementRef key="placeName"/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="q" mode="change">
                        <desc versionDate="2022-05-26" xml:lang="en">Quotation from the manuscript. Use the "xml:lang" attribute to specify the
                            language.</desc>
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.ascribed.directed" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="who" mode="delete"/>
                            <attList>
                                <attDef ident="xml:lang" mode="change">
                                    <valList type="closed" mode="change">
                                        <valItem mode="add" ident="ar"/>
                                        <valItem mode="add" ident="en"/>
                                        <valItem mode="add" ident="he"/>
                                    </valList>
                                </attDef>
                            </attList>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="placeName" mode="change">
                        <desc versionDate="2022-05-26" xml:lang="en">Look up the place records in the database to specify a settlement or town. Try
                            different spellings in different languages! If no suitable record exists, create a new one. (The "ref" attribute will be
                            filled out automatically when you link a place record to this element.)</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.personal" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="key" mode="delete"/>
                            <attDef ident="ref" mode="delete"/>
                            <attDef ident="role" mode="delete"/>
                            <attDef ident="nymRef" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="origDate" mode="change">
                        <desc versionDate="2022-05-26" xml:id="origdate.desc" xml:lang="en">Fill in the date in the agreed-upon calendrical system.
                            Use the "when" attribute for precise values. In case the date can only be approximated, use the "notAfter "and "notBefore"
                            attributes together.</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <alternate maxOccurs="unbounded" minOccurs="0">
                                <textNode/>
                            </alternate>
                        </content>
                        <attList>
                            <attRef name="when" class="att.datable.w3c"/>
                            <attRef name="notAfter" class="att.datable.w3c"/>
                            <attRef name="notBefore" class="att.datable.w3c"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="origPlace" mode="change">
                        <desc versionDate="2022-05-26" xml:id="origplace.desc" xml:lang="en">Look up the place records in the database to specify the
                            location where the manuscript or manuscript part was produced. Try different spellings in different languages! If no
                            suitable record exists, create a new one. (The "ref" attribute will be filled out automatically when you link a place
                            record to this element.)</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.naming" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="key" mode="delete"/>
                            <attRef name="ref" class="att.canonical"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="date" mode="change">
                        <desc versionDate="2022-05-26" xml:lang="en">Fill in the date in the agreed-upon calendrical system. Use the "when" attribute
                            for precise values. In case the date can only be approximated, use the "notAfter "and "notBefore" attributes
                            together.</desc>
                        <classes mode="change">
                            <memberOf key="att.canonical" mode="delete"/>
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <alternate maxOccurs="unbounded" minOccurs="0">
                                <textNode/>
                            </alternate>
                        </content>
                        <attList>
                            <attRef name="notBefore" class="att.datable.w3c"/>
                            <attRef name="notAfter" class="att.datable.w3c"/>
                            <attRef name="when" class="att.datable.w3c"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="persName" mode="change">
                        <desc versionDate="2022-05-26" xml:lang="en">Look up the person records in the database to identify the person. Try different
                            spellings in different languages! If no suitable record exists, create a new one. Use the "role" attribute to specify the
                            person's function to the manuscript (e.g., "owner") from the list. (The "ref" attribute will be filled out automatically
                            when you link a record to this element.)</desc>
                        <classes mode="change">
                            <memberOf key="att.canonical"/>
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.personal" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                        </content>
                        <attList>
                            <attDef ident="role" mode="delete"/>
                            <attDef ident="nymRef" mode="delete"/>
                            <attDef ident="key" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="signatures" mode="delete"/>
                    <elementSpec ident="stamp" mode="change">
                        <desc versionDate="2022-05-26" xml:lang="en">Describe the stamps left by libraries or other institutions, usually to mark
                            manuscripts as their property.</desc>
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <textNode/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="history" mode="change">
                        <desc versionDate="2022-05-26" xml:id="history.desc" xml:lang="en">Give an account about the history of the manuscript and its
                            owners. Distinguish between the manuscript's production ("origin"), the following owners ("provenance"), and how it came
                            into the present collection ("acquisition").</desc>
                    </elementSpec>
                </schemaSpec>
            </div>
        </body>
    </text>
</TEI>
