                            <attDef ident="xml:lang" mode="delete"/>
                            <attDef ident="xml:space" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="acquisition" mode="change">
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="placeName"/>
                            <elementRef key="date"/>
                            <elementRef key="stamp"/>
                            <elementRef key="signatures"/>
                            <elementRef key="p"/>
                            <elementRef key="persName"/>
                            <elementRef key="locus"/>
                        <elementRef key="placeName"/><elementRef key="date"/><elementRef key="stamp"/><elementRef key="signatures"/><elementRef key="p"/><elementRef key="persName"/><elementRef key="locus"/></content>
                    </elementSpec>
                    <elementSpec ident="origin" mode="change">
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="p"/>
                            <elementRef key="q"/>
                            <elementRef key="origPlace"/>
                            <elementRef key="origDate"/>
                            <elementRef key="locus"/>
                            <elementRef key="persName"/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="provenance" mode="change">
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.global" mode="delete"/>
                            <memberOf key="att.typed" mode="delete"/>
                        </classes>
                        <content>
                            <elementRef key="date"/>
                            <elementRef key="p"/>
                            <elementRef key="locus"/>
                            <elementRef key="persName"/>
                            <elementRef key="signatures"/>
                            <elementRef key="stamp"/>
                            <elementRef key="placeName"/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="q" mode="change">
                        <classes mode="change">
                            <memberOf key="att.global" mode="delete"/>
                        <memberOf key="att.ascribed.directed" mode="delete"/><memberOf key="att.global" mode="delete"/></classes>
                        <content>
                            <textNode/>
                        </content>
                    <attList><attDef ident="who" mode="delete"/><attRef name="xml:lang" class="att.global"/></attList></elementSpec>
                    <elementSpec ident="placeName" mode="change">
                        <classes mode="change">
                            <memberOf key="att.datable" mode="delete"/>
                            <memberOf key="att.editLike" mode="delete"/>
